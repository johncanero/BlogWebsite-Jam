<%- include("partials/header") %>

<!-- Design Compose Message in Bootstrap Form -->
<h1>Compose</h1>

<!-- Multi-line Text Input -->
<form class="" action="/compose" method="post">
    <div class="mb-3">
      <label for="postTitle" class="form-label fw-bold">Title</label>
      <input name="postTitle" type="title" class="form-control" id="postTitle" aria-describedby="postTitle">
      <label for="postBody" class="form-label fw-bold">Post</label>
      <textarea name="postBody" class="form-control" cols="155" rows="5"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

